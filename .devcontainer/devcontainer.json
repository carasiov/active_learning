{
	"name": "SSVAE Active Learning (CUDA 12)",
	"image": "nvidia/cuda:12.1.0-cudnn8-devel-ubuntu22.04",
	"initializeCommand": "bash .devcontainer/hooks/initialize.sh",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11"
		},
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"upgradePackages": true
		}
	},
	"runArgs": [
		"--shm-size=8g"
	],
	"containerEnv": {
		"POETRY_VIRTUALENVS_CREATE": "1",
		"POETRY_VIRTUALENVS_IN_PROJECT": "1"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers"
			],
			"settings": {
				"python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
				"python.terminal.activateEnvironment": true
			}
		}
	},
	"postCreateCommand": "python3 -m pip install --upgrade pip poetry && poetry env use $(command -v python3) && poetry install",
	"remoteUser": "root"
}
